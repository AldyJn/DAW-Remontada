<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>CRUD Productos JSTL</display-name>
    <description>
        Aplicacion web Java EE para gestion de productos y categorias usando JSTL
    </description>

    <!-- Pagina de inicio por defecto -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Configuracion de sesion -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Configuracion de servlets -->
    <servlet>
        <servlet-name>ProductoServlet</servlet-name>
        <servlet-class>com.crudproductosjstl.crudproductosjstl.controller.ProductoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/productos</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoriaServlet</servlet-name>
        <servlet-class>com.crudproductosjstl.crudproductosjstl.controller.CategoriaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CategoriaServlet</servlet-name>
        <url-pattern>/categorias</url-pattern>
    </servlet-mapping>

    <!-- Configuracion de codificacion -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <!-- Paginas de error personalizadas -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

</web-app>
